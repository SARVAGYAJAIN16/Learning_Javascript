// Question 2 :-write  a function that takes an array of number and return a new array where each number 
// is squared but if it is an even number.

// ans-2

const number = [1, 2, 3, 4, 5];
let result = number.map((currElem) => {
          if(currElem % 2 === 0 ){
            return currElem * currElem;
          }
        //   else return currElem;    // here we get full array but want only square of 2 and 4 (even number) 
        //  if not else part so in rest value will undefined will be come.
}).filter((currElem) => currElem != undefined);
console.log(result);   //output        [ 4, 16 ]

