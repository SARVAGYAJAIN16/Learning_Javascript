// Practise question using loop
1 check  number is palindrome or not.
--->
let a=476,sum=0,b,z=a;
while(a>0)
{
  b=a%10;
  sum=sum*10+b;
  a=parseInt(a/10);
}
console.log(sum);
if(z==sum){
  console.log("palindrome number",sum);
}
else{
  console.log("not a palindrome number",sum);
}
-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

2 reverse a number in javascript.
--->
let num = 2613;
let str = num.toString();

let rev_num = '';

for (let i = 0; i < str.length; i++) {
  rev_num =  str[i] + rev_num;
}
console.log(rev_num);
